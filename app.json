{
  "expo": {
    "name": "Gammon Material Management",
    "slug": "gammon-mm-expo",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "gammonmmexpo",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "description": "Advanced material management system for Gammon construction projects with inventory tracking, movement management, and offline capabilities.",
    "privacy": "public",
    "platforms": ["ios", "android", "web"],
    "keywords": ["material management", "inventory", "construction", "gammon", "tracking"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.gammon.materialmanagement",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSCameraUsageDescription": "This app uses the camera to scan QR codes and barcodes for inventory management.",
        "NSLocationWhenInUseUsageDescription": "This app uses location to track material movements and site-specific inventory."
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.gammon.materialmanagement",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ]
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "ccf9b5a5-f5bc-451a-9048-224cab32f3ef"
      }
    }
  }
}
