# Expo Mobile App Environment Example
# Copy to .env (never commit real secrets)

# Base API URL (no trailing slash)
API_BASE_URL=https://dev.material-api.example.com

# Environment tag (DEV|UAT|PRE|PROD)
APP_ENV=DEV

# Feature flags (comma separated or boolean)
FEATURE_APPROVALS=true
FEATURE_ATTACHMENTS=true
FEATURE_OFFLINE_STAGING=true

# Update channel (expo-updates)
EXPO_UPDATE_CHANNEL=development

# Public analytics key (if any)
ANALYTICS_PUBLIC_KEY=

# Log batching endpoint relative path
LOG_ENDPOINT=/log/events

# Permissions cache TTL minutes
PERMISSIONS_TTL_MINUTES=10

# Performance thresholds (ms)
PERF_P90_COLD_START=3200
PERF_P90_SEARCH=1500
PERF_P90_SCAN_SUBMIT=1100

# Azure AD / Entra ID Configuration
AZURE_CLIENT_ID=051eb053-51a2-4bd1-b469-0ac2012e6792
AZURE_TENANT_ID=988687c9-cef9-453f-9b1d-0e3ffe89fe50
AZURE_REDIRECT_URI=exp://localhost:8081/--/auth
AZURE_AUTHORITY=https://login.microsoftonline.com/988687c9-cef9-453f-9b1d-0e3ffe89fe50

# API Configuration
API_BASE_URL=http://localhost:7060/api
API_SCOPE=api://051eb053-51a2-4bd1-b469-0ac2012e6792/erp.mm.api

# App Configuration (Public variables for Expo)
EXPO_PUBLIC_AZURE_CLIENT_ID=051eb053-51a2-4bd1-b469-0ac2012e6792
EXPO_PUBLIC_AZURE_TENANT_ID=988687c9-cef9-453f-9b1d-0e3ffe89fe50
EXPO_PUBLIC_AZURE_AUTHORITY=https://login.microsoftonline.com/988687c9-cef9-453f-9b1d-0e3ffe89fe50
EXPO_PUBLIC_API_BASE_URL=http://localhost:7060/api
EXPO_PUBLIC_API_URL=http://localhost:7060/api
